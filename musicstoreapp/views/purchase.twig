{% extends "layout.twig" %}
{% block title %} Mis Compras {% endblock %}
{% block main_container %}
<h2>Mis compras</h2>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
		<tr>
			<th>Nombre</th>
			<th>Genero</th>
			<th class="col-md-1"></th>
		</tr>
		</thead>
		<tbody>
		{% for song in songs %}
		<tr>
			<td>{{ song.title }}</td>
			<td>{{ song.kind }}</td>
			<td>
				<audio controls>
					<source src="/audios/{{ song._id }}.mp3" type="audio/mpeg">
				</audio>
			</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}